<p id="notice"><%= notice %></p>

<!-- <h1>Articles</h1> -->
<nav class="navbar navbar-light bg-light">
  <a class="navbar-brand">Articles</a>

  <%= form_tag(articles_path, method: :get, class:"form-inline")do%>
      <%= text_field_tag :search, params[:search], placeholder:"Search", class:"form-control mr-sm-2" %>
       <span class="input-group-btn">
        <%= submit_tag "Search", class: 'btn btn-outline-success my-2 my-sm-0' %>
      </span>
  <% end %>
</nav>


<table class="table table-striped">
  <thead>
    <tr>
      <th width="25%">Title</th>
      <th>Text</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= article.text %></td>
        <td><%= link_to 'Show', article, class:"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_article_path(article), class:"btn btn-info"%></td>
        <td><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure delete?' }, class:"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<div class="row">
  <%= link_to 'New Article', new_article_path, class:"btn btn-success"%>

</div>
